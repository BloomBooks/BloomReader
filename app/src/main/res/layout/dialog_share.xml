<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insideView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp" >

    <ImageView
        android:id="@+id/imgGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitStart"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:src="@drawable/share_apk"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:contentDescription="depiction of Bloom Reader transferring from one mobile device to another"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtShareAppWithFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:padding="12dp"
        android:text="@string/share_app_with_friend"
        android:textColor="@color/colorPrimary"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnShareApkFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:layout_marginBottom="70dp"
        android:text="@string/share"
        android:background="@drawable/main_button"
        style="@style/MainButton"/>

    <TextView
        android:id="@+id/txtOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/or"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/linkShareLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:padding="12dp"
        android:text="@string/share_app_link"
        android:textColor="@color/colorBloomRed"
        android:clickable="true"
        android:gravity="center"
        android:focusable="true" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="@color/colorBloomRed"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/cancel"/>

</LinearLayout>
