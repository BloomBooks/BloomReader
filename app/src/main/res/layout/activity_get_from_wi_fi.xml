<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wifiDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="top" >

    <TextView android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_books_local_wifi"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/get_book_from_wifi"/>

    <ScrollView
        android:id="@+id/wifi_progress_scroller"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:scrollbars="vertical"
        android:layout_weight="1.0">

        <TextView
            android:id="@+id/wifi_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#000"/>

    </ScrollView>
    <Button
        android:id="@+id/wifiOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#fff"
        android:textColor="@color/colorBloomRed"
        android:text="@string/ok"
        style="?android:attr/borderlessButtonStyle"/>


</android.widget.LinearLayout>
